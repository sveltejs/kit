{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"kit.svelte.dev#build": {
			"dependsOn": ["^build"],
			"inputs": ["src/**", "../../packages/kit/docs/**", "../../documentation/**"],
			"outputs": [".vercel/output/**"],
			"outputMode": "new-only",
			"env": ["VERCEL"]
		},
		"create-svelte#build": {
			"dependsOn": ["^build"],
			"inputs": ["src/**", "scripts/**", "shared/**", "templates/**"],
			"outputs": ["dist/**"],
			"outputMode": "new-only",
			"env": ["VERCEL"]
		},
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["src/**"],
			"outputs": ["files/**", "dist/**", ".svelte-kit/**", ".vercel/output/**"],
			"outputMode": "new-only",
			"env": ["VERCEL"]
		},
		"check": {
			"inputs": [
				"index.js",
				"index.d.ts",
				"ambient.d.ts",
				"src/**",
				"source/**",
				"types/**",
				".svelte-kit/types/**",
				".custom-out-dir/types/**",
				".svelte-kit/tsconfig.json"
			],
			"outputs": [],
			"outputMode": "new-only"
		},
		"format": {
			"cache": false,
			"outputs": [],
			"outputMode": "new-only"
		},
		"test": {
			"dependsOn": ["^build"],
			"inputs": ["test/**"],
			"outputs": ["coverage/", "test-results/**"],
			"outputMode": "new-only",
			"env": ["CI", "TURBO_CACHE_KEY"]
		},
		"test:cross-browser": {
			"inputs": ["src/**", "scripts/**", "shared/**", "templates/**", "test/**"],
			"outputs": ["coverage/", "test-results/**"],
			"outputMode": "new-only",
			"env": ["CI", "TURBO_CACHE_KEY"]
		},
		"lint": {
			"outputs": [],
			"outputMode": "new-only"
		},
		"precommit": {
			"dependsOn": ["format", "lint"],
			"outputs": [],
			"outputMode": "new-only"
		},
		"dev": {
			"cache": false,
			"outputMode": "new-only"
		}
	},
	"globalDependencies": [".eslintrc.json", ".prettierrc", "tsconfig.json"]
}
