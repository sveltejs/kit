{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"noImplicitAny": true,
		"target": "es2022",
		"module": "node16",
		"moduleResolution": "node16",
		// https://github.com/netlify/functions/issues/447
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"@sveltejs/kit": ["../kit/types/index"]
		}
	},
	"include": ["*.js", "src/**/*.js", "ambient.d.ts"]
}
