{
	"name": "@sveltejs/adapter-cloudflare",
	"version": "1.0.0-next.18",
	"repository": {
		"type": "git",
		"url": "https://github.com/sveltejs/kit",
		"directory": "packages/adapter-cloudflare"
	},
	"license": "MIT",
	"homepage": "https://kit.svelte.dev",
	"type": "module",
	"exports": {
		".": {
			"import": "./index.js"
		},
		"./package.json": "./package.json"
	},
	"types": "index.d.ts",
	"files": [
		"files",
