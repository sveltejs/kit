{
	"name": "@sveltejs/adapter-cloudflare",
	"version": "7.2.6",
	"description": "Adapts SvelteKit applications for Cloudflare Workers or Cloudflare Pages",
	"keywords": [
		"adapter",
		"cloudflare pages",
		"deploy",
		"hosting",
		"svelte",
		"sveltekit"
	],
	"homepage": "https://svelte.dev/docs/kit/adapter-cloudflare",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sveltejs/kit.git",
		"directory": "packages/adapter-cloudflare"
	},
	"files": [
		"files",
		"index.js",
		"utils.js",
		"index.d.ts",
		"ambient.d.ts"
	],
	"type": "module",
	"types": "index.d.ts",
	"exports": {
		".": {
			"types": "./index.d.ts",
			"import": "./index.js"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": "esbuild src/worker.js --bundle --outfile=files/worker.js --external:SERVER --external:MANIFEST --external:cloudflare:workers --format=esm",
		"lint": "oxfmt --check .",
		"format": "oxfmt --write .",
		"check": "tsc --skipLibCheck",
		"test:unit": "vitest run",
		"test:e2e": "pnpm build && pnpm -r --workspace-concurrency 1 --filter=\"./test/**\" test",
		"test": "pnpm test:unit && pnpm test:e2e",
		"prepublishOnly": "pnpm build"
	},
	"dependencies": {
		"@cloudflare/workers-types": "^4.20250507.0",
		"worktop": "0.8.0-next.18"
	},
	"devDependencies": {
		"@playwright/test": "catalog:",
		"@sveltejs/kit": "workspace:^",
		"@types/node": "catalog:",
		"esbuild": "catalog:",
		"typescript": "^5.3.3",
		"vitest": "catalog:"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"wrangler": "^4.0.0"
	}
}
